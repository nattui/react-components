{
  "name": "react-components",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "check": "bun run check:format && bun run check:lint && bun run check:type",
    "check:fix": "bun run check:format:fix && bun run check:lint:fix && bun run check:type",
    "check:format": "prettier --check .",
    "check:format:fix": "prettier --write .",
    "check:lint": "eslint .",
    "check:lint:fix": "eslint --fix .",
    "check:package": "sh scripts/sort-package-json.sh",
    "clean": "sh scripts/clean.sh",
    "dev": "turbo dev",
    "update": "bun update --interactive --recursive"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "eslint": "^9.38.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-unused-imports": "^4.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-sort-json": "^4.1.1",
    "turbo": "^2.5.8",
    "typescript-eslint": "^8.46.1"
  },
  "packageManager": "bun@1.3.0",
  "catalog": {
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.9.3"
  }
}
